# Google Places API Key
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Google Custom Search API (for website verification)
GOOGLE_CUSTOM_SEARCH_API_KEY=your_custom_search_api_key_here
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_search_engine_id_here

# Apollo API Key (for decision maker lookup)
APOLLO_API_KEY=your_apollo_api_key_here

# Path to your Google Service Account JSON key file (for local development)
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./service-account-key.json

# OR (for Vercel deployment) - paste the entire contents of your service-account-key.json file
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Your Google Spreadsheet ID (from the URL)
# Example: https://docs.google.com/spreadsheets/d/1abc123xyz/edit
# The ID is: 1abc123xyz
GOOGLE_SHEET_ID=your_spreadsheet_id_here
